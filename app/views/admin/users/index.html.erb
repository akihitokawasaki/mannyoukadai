<h1>管理画面</h1>
<%= link_to "ユーザー作成", new_admin_user_path,class:"btn btn-primary btn-lg" %>
<ul class="media-list">
  <% @users.each do |user| %>
    <li class="media">
      <h4 class="media-left" style="color: blue;">
        ID:<%= user.id %>
        <% if user.admin? %> 
          <span class="badge">管理者</span>
        <% end %>
      </h4>
      <div class="media-body">
        <h4 class="media-heading">名前:<%= user.name %></h4>
          <div id = "detail"> 
            <%= link_to "詳細",admin_user_path(user.id),class:'btn btn-info btn-xs' %>
          </div>
          <div id = "Edit"> 
            <%= link_to "編集",edit_admin_user_path(user.id),class:'btn btn-info btn-xs' %>
          </div>
          <div id = "destroy">
            <%= link_to "削除", admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除してよろしいですか？' },class:'btn btn-info btn-xs' %>
          </div>
          タスク投稿数: <%= user.tasks.size %>
      </div>
    </li>
  <% end %> 
</ul>